    "tables": {
      "Company": {
        "fields": {
          "id": {
            "type": "int",
            "range": "255",
            "auto_increment": true,
            "not_null": true
          },
          "name": {
            "type": "varchar",
            "range": "100"
          },
          "cif": {
            "type": "char",
            "range": "9"
          },
          "shortdesc": {
            "type": "varchar",
            "range": "140"
          },
          "description": {
            "type": "mediumtext"
          },
          "email": {
            "type": "varchar",
            "range": "100"
          },
          "ccc": {
            "type": "varchar",
            "range": "100"
          },
          "date": {
            "type": "date"
          },
          "status": {
            "type": "boolean"
          },
          "logo": {
            "type": "mediumtext"
          },
          "token": {
            "type": "char",
            "range": "64"
          }
        },
        "unique_fields": "name cif token",
        "primary_key": "id",
        "routes": {
          "create": {
            "validation": {
              "name": {
                "where": ["body"],
                "check": ["exists", "not", "isEmpty", "trim"]
              },
              "description": {
                "where": ["body"],
                "check": ["exists", "not", "isEmpty", "trim"]
              },
              "email": {
                "where": ["body"],
                "check": ["exists", "not", "isEmpty", "trim", "isEmail", "normalizeEmail"]
              },
              "cif": {
                "where": ["body"],
                "check": ["exists", "not", "isEmpty", "trim"],
                "custom": ["/^[A-Z]\\d{8}$/"]
              },
              "logo": {
                "where": ["body"],
                "check": ["exists", "not", "isEmpty", "trim"]
              },
              "shortdesc": {
                "where": ["body"],
                "check": ["optional", "trim"]
              },
              "ccc": {
                "where": ["body"],
                "check": ["optional", "trim"]
              },
              "date": {
                "where": ["body"],
                "check": ["optional", "trim"]
              },
              "status": {
                "where": ["body"],
                "text": ["Status is not a boolean"],
                "check": ["optional", "isBoolean"]
              }
            }
          },
          "update": {
            "validation": {
              "id": {
                "where": ["param", "body"],
                "text": ["You must introduce a valid company id", "You cannot upload the id of a company"],
                "check": [["exists", "not", "isEmpty", "isInt"], ["not", "exists"]]
              },
              "name": {
                "where": ["body"],
                "check": ["optional", "not", "isEmpty", "trim"]
              },
              "description": {
                "where": ["body"],
                "check": ["optional", "not", "isEmpty", "trim"]
              },
              "email": {
                "where": ["body"],
                "text": ["You cannot upload the email of a company"],
                "check": ["not", "exists"]
              },
              "cif": {
                "where": ["body"],
                "text": ["You cannot upload the cif of a company"],
                "check": ["not", "exists"]
              },
              "logo": {
                "where": ["body"],
                "check": ["optional", "not", "isEmpty", "trim"]
              },
              "shortdesc": {
                "where": ["body"],
                "check": ["optional", "not", "isEmpty", "trim"]
              },
              "ccc": {
                "where": ["body"],
                "check": ["optional", "not", "isEmpty", "trim"]
              },
              "date": {
                "where": ["body"],
                "text": ["You cannot upload the date of a company"],
                "check": ["not", "exists"]
              },
              "status": {
                "where": ["body"],
                "text": ["Status is not a boolean"],
                "check": ["optional", "isBoolean"]
              }
            }
          }
        }
      },
      "Favorite": {
